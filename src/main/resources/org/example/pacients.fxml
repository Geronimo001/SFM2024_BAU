<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" alignment="CENTER" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.PacientController">
    <Label text="Válassz egy állatfajt:"/>
    <ComboBox fx:id="speciesComboBox"/>

    <Label text="Válassz egy betegséget:"/>
    <ComboBox fx:id="diseaseComboBox"/>

    <Label text="Válassz gyógyszereket:"/>
    <ListView fx:id="medicineListView" prefHeight="150"/>

    <Label text="Állat súlya (kg):"/>
    <TextField fx:id="weightTextField" promptText="Add meg az állat súlyát (kg)"/>

    <Button text="Adag számítása" onAction="#calculateDose"/>

    <Label fx:id="resultLabel" text="Adag: "/>
</VBox>
